<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: brown;">Book Path</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Assistant") || User.IsInRole("Admin") || User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Manager"
                                    asp-action="Index">Books</a>
                            </li>
                        }

                        @if (User.IsInRole("Assistant") || User.IsInRole("Admin"))
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Manager"
                                        asp-action="Users">Users</a>
                                </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Manager"
                                        asp-action="Assistants">Assistants</a>
                                </li>
                        } 
                          @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item position-relative">
                                <!-- Create Butonu -->
                                <a class="nav-link text-dark" href="#" onclick="toggleButtons()">Create</a>

                                <!-- Dinamik Butonlar -->
                                <div id="dynamicButtons"
                                    style="display: none; position: absolute; top: 100%; left: 0; background: white; padding: 0; border: 1px solid #ccc; border-radius: 5px; box-shadow: 0px 4px 8px rgba(0,0,0,0.2); z-index: 1000; width: max-content;">
                                    <a asp-action="Createuser" asp-controller="Manager" class="btn  btn-sm " >Assistant or User</a>
                                    <a asp-action="Createbook" asp-controller="Manager" class="btn  btn-sm  " >Book</a>
                                </div>
                            </li>
                        }

                        <script>
                            function toggleButtons() {
                                const buttonContainer = document.getElementById('dynamicButtons');
                                if (buttonContainer.style.display === 'none') {
                                    buttonContainer.style.display = 'block';
                                } else {
                                    buttonContainer.style.display = 'none';
                                }
                            }
                        </script>
                        
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                    asp-action="Contactus">Contact Us</a>
                            </li>
                        
                        

                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="Logout" asp-controller="Account" method="post" class="d-flex">
                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Book Path - 
        <a asp-area="" asp-controller="Home" asp-action="Contactus" style="text-decoration: none; color: brown;">
            Contact us
        </a>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
