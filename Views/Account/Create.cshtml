@model CreateViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
  
        body {
            margin: 0;
            background-image: url('/images/kitapfoto.jpg'); /* Background Image */
            background-size: cover;
            background-attachment: fixed;
            background-position: center -110px;
            font-family: Arial, sans-serif;
            color: #333;
        }

      
        .container {
            margin-top: 5%;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9); /* Light background for contrast */
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        
        .display-6 {
            font-size: 2.5rem;
            color: #6e4f30;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

       
        .btn {
            background-color: #886848;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #6e4f30;
        }

        /* Links Styling */
        a {
            color: #6e4f30;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Form Labels */
        label {
            font-weight: bold;
            color: #333;
        }

        /* Error Messages */
        .text-danger {
            font-size: 0.9rem;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5"> 
        <div class="row justify-content-center"> 
            <div class="col-md-6"> 
                <div class="display-6 text-center mb-4">Sign Up</div>
                <hr style="border: 3px solid #79604d;">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="UserName">UserName</label>
                        <input asp-for="UserName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control">
                    </div>
                    <div class="text-center mt-4">
                        <button class="btn" type="submit">Submit</button>
                    </div>
                    <div class="text-center mt-4">
                        <p>
                            Already have an account?
                            <a asp-controller="Account" asp-action="Login">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
